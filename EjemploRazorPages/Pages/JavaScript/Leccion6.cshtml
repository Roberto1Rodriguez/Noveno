    <body>
        <h1>Leccion 6. Mover Objetos</h1>
    <style>
        select {
            width: 150px;
        }
    </style>
        <form>
            <input type="text" id="texto" /><input type="button" value="+" /><br />
            <select size="10">
                
            </select>
            <input type="button" value=">>" />
            <input type="button" value="<<" />
            <select size="10"></select>
        </form>
        <script>
            const form=document.querySelector("form");
            const textbox=form.querySelector("#texto");
            const selects= form.getElementsByTagName("SELECT");
            form.addEventListener("click", function(evento){

                if(event.target.type && event.target.type=="button"){
                    let btn=event.target.value;
                    if (btn == "+" && textbox.value) {
                        let op = document.createElement("OPTION");
                        op.textContent = textbox.value;


                        selects[0].add(op);
                        textbox.value = "";
                    }
                    else if (btn == ">>" && selects[0].selectedIndex >= 0) { 
                        let sel = selects[0].options[selects[0].selectedIndex];
                        selects[1].add(sel);
                    }
                else if (btn == "<<" && selects[1].selectedIndex >= 0) {
                    let sel = selects[1].options[selects[1].selectedIndex];
                    selects[0].add(sel);
                }

                    
                }



            });
        </script>
    </body>
</html>